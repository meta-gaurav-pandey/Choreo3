<?xml version="1.0" encoding="UTF-8"?>
<api context="/xmlIntegration" name="XmlIntegration" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <log>
                <property name="Start Logger" value="XML Integration Started"/>
            </log>
            <file.read configKey="FILE_CONNECTION_1">
                <path>C:/FileConnectorDemo/input.xml</path>
                <readMode>Complete File</readMode>
                <startLineNum>0</startLineNum>
                <lineNum>0</lineNum>
                <includeResultTo>Message Body</includeResultTo>
                <enableStreaming>false</enableStreaming>
                <enableLock>false</enableLock>
            </file.read>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://localhost:8080/generate/ttl?entityType=OrganisationMapping">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://localhost:8081/insertDataIntoGraph">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log>
                <property name="End Logger" value="XML Integration is ended"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
